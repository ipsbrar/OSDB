<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                    app:cardElevation="@dimen/dp_8"
                                    app:cardCornerRadius="@dimen/dp_4"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_height="250dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/top"
                android:layout_height="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">
            <TextView
                    android:text="Soccer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_2E384D"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
            />

            <TextView
                    android:text="Primer League"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/textView"

                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_2E384D"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
            />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8798AD"/>

        <TextView
                android:id="@+id/round_text"
                android:text="SEMI-FINAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:layout_gravity="center"
                android:textColor="@color/color_6849D7"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:weightSum="3"
                      android:layout_marginLeft="@dimen/dp_20"
                      android:layout_marginRight="@dimen/dp_20"
                      android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/team_1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_football_2"/>

                <TextView
                        android:text="@string/real_madrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:textColor="@color/color_2E384D"

                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/sp_14"
                />
                <TextView
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/color_2E384D"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                />
            </LinearLayout>

            <ImageView
                    android:id="@+id/versusImg" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/versus"/>
            <LinearLayout
                    android:layout_below="@+id/round_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_footbal_1" android:contentDescription="image"/>

                <TextView
                        android:text="@string/barcelona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"

                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/sp_14"
                />
                <TextView
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/color_2E384D"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                />
            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8798AD"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="@string/metlife_stadium_east_rutherford"
                      android:gravity="center_vertical"
                      android:layout_alignParentLeft="true"
                      android:fontFamily="@font/rubik_regular"
                      android:textColor="@color/color_8798AD"
                      android:textSize="@dimen/sp_12"
                      android:layout_marginLeft="@dimen/dp_10"/>

            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="Live"
                      android:gravity="center_vertical"
                      android:layout_alignParentRight="true"
                      android:fontFamily="@font/rubik_regular"
                      android:textSize="@dimen/sp_12"
                      android:textColor="@color/color_4CE1B6"
                      android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>