<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/constMainLayout"
        android:layout_height="match_parent"
        android:background="@color/white">


    <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/coming_soon_boxing"
            android:id="@+id/img_coming_soon" android:contentDescription="TODO" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_coming_soon"
            android:textAlignment="center"
            tools:text="@string/coming_soon"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/dp_4"
            android:fontFamily="@font/rubik_medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/img_coming_soon" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_coming_soon" app:layout_constraintVertical_bias="0.76"/>

</android.support.constraint.ConstraintLayout>