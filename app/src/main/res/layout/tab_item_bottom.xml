<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="6"
>
    <LinearLayout
            android:id="@+id/home_lay"
            android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_weight="1">
        <ImageView
                android:id="@+id/tab_icon_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_home"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/rubik_regular"
                  android:id="@+id/tab_name_home"
                  android:layout_gravity="center"
                  android:text="@string/title_home"
                  android:layout_marginTop="@dimen/dp_5"
                  android:textSize="@dimen/sp_12"
        />
    </LinearLayout>


    <LinearLayout android:id="@+id/latest_lay"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_weight="1">
        <ImageView
                android:id="@+id/tab_icon_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/latest_icon_selctor"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/rubik_regular"
                  android:id="@+id/tab_name_latest"
                  android:layout_gravity="center"
                  android:text="@string/title_latest"
                  android:layout_marginTop="@dimen/dp_5"
                  android:textSize="@dimen/sp_12"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/live_scores_lay"
            android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_weight="2">
        <ImageView
                android:id="@+id/tab_icon_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/live_icon_selector"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/rubik_regular"
                  android:id="@+id/tab_name_live"
                  android:layout_gravity="center"
                  android:text="@string/title_live_scores"
                  android:layout_marginTop="@dimen/dp_5"
                  android:textSize="@dimen/sp_12"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/polls_lay"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:gravity="center">
        <ImageView
                android:id="@+id/tab_icon_polls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/poll_icon_selector"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/rubik_regular"
                  android:id="@+id/tab_name_polls"
                  android:layout_gravity="center"
                  android:text="@string/title_poll"
                  android:layout_marginTop="@dimen/dp_5"
                  android:textSize="@dimen/sp_12"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/discussion_lay"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_weight="1">
        <ImageView
                android:id="@+id/tab_icon_decription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/discussion_icon_selector"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:fontFamily="@font/rubik_regular"
                  android:id="@+id/tab_name"
                  android:layout_gravity="center"
                  android:text="@string/title_discussion"
                  android:layout_marginTop="@dimen/dp_5"
                  android:textSize="@dimen/sp_12"
        />
    </LinearLayout>
</LinearLayout>