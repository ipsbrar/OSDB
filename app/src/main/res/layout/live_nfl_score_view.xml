<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                   app:cardElevation="@dimen/dp_8"
                                    app:cardCornerRadius="@dimen/dp_4"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_10">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                android:text="NFL"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8798AD"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_10"
                      android:layout_marginRight="@dimen/dp_10"

                      android:gravity="center"
                      android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/team_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/dp_5"

                           android:src="@drawable/ic_nfl_1"/>

                <TextView
                        android:text="@string/seahawck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/color_black"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/sp_14"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                >
                    <TextView
                            android:text="1"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"

                            android:textColor="@color/color_black"
                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="2"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="3"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="4"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="5"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:background="@drawable/black_view_bg"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/team_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/dp_5"
                           android:src="@drawable/ic_nfl_2"/>

                <TextView
                        android:text="@string/bufallo_bills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/color_black"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/sp_14"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                >
                    <TextView
                            android:text="1"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"

                            android:textColor="@color/color_black"
                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="2"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="3"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="4"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/color_black"

                            android:textSize="@dimen/sp_14"
                    />
                    <TextView
                            android:text="5"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_30"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:background="@drawable/black_view_bg"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_8798AD"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="@string/metlife_stadium_east_rutherford"
                      android:gravity="center_vertical"
                      android:layout_alignParentLeft="true"
                      android:textColor="@color/color_8798AD"
                      android:layout_marginLeft="@dimen/dp_10"/>

            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="Live"
                      android:gravity="center_vertical"
                      android:layout_alignParentRight="true"
                      android:textColor="@color/color_4CE1B6"
                      android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>