<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@color/color_EFEFEF"

            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/dp_13"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:background="@color/color_white"
                        android:layout_height="wrap_content">
            <RelativeLayout
                    android:id="@+id/rl_height"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView android:height="17dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/height_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:height="17dp"
                          android:id="@+id/user_height"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="6’2”"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>

            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_weight"
                    android:layout_below="@+id/rl_height"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">

                <TextView
                        android:height="17dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/weight_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:height="17dp"
                          android:id="@+id/user_weight"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="225 lbs"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>

            </RelativeLayout>




            <RelativeLayout android:layout_width="match_parent"
                            android:layout_below="@+id/rl_weight"
                            android:id="@+id/rl_college"
                            android:layout_marginTop="@dimen/dp_9"
                            android:layout_height="wrap_content">
                <TextView android:height="17dp"

                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/college_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:height="17dp"
                          android:id="@+id/user_college"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="California Golden Bears"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>

            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_place_of_birth"
                    android:layout_below="@+id/rl_college"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/place_of_birth_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                          android:id="@+id/user_place_of_birth"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="Chico, California, United States"
                          android:maxLines="1"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_position"
                    android:layout_below="@+id/rl_place_of_birth"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:maxLines="1"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/position_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:height="17dp"
                          android:id="@+id/user_position"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="Quarterback"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_fan_email_address"
                    android:layout_below="@+id/rl_position"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:maxLines="1"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/fan_mail_address_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                          android:id="@+id/user_fan_email_address"
                          android:layout_height="wrap_content"
                          android:gravity="start"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text="Green Bay Packers, Inc. P.O. Box 10628 Green Bay, WI 54307-0628"
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_sport_agent"
                    android:layout_below="@+id/rl_fan_email_address"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:maxLines="1"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/sports_agent_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:height="17dp"
                          android:id="@+id/user_sport_agent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:lineSpacingMultiplier="1.14"
                          android:text=""
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_television_agent"
                    android:layout_below="@+id/rl_sport_agent"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_height="wrap_content">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="@color/color_black"
                          android:textAlignment="center"
                          android:maxLines="1"
                          android:layout_marginLeft="@dimen/dp_29"
                          android:text="@string/television_agent_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                          android:id="@+id/user_television_agent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:text=""
                          android:textColor="@color/color_727272"
                          android:layout_marginLeft="@dimen/dp_151"
                          android:fontFamily="@font/rubik_light"
                          android:textSize="@dimen/sp_14"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/color_white"
                android:layout_height="wrap_content">
            <TextView android:height="21dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:id="@+id/d_current_contract"
                      android:textColor="@color/color_black"
                        android:layout_marginTop="@dimen/dp_12"
                      android:textAlignment="center"
                      android:layout_marginLeft="@dimen/dp_26"
                      android:lineSpacingMultiplier="1.50"
                      android:text="@string/current_contract_info"
                      android:fontFamily="@font/rubik_medium"
                      android:textSize="@dimen/sp_14"/>

            <TextView
                      android:id="@+id/user_current_contract"
                      android:layout_height="wrap_content"
                      android:gravity="start"
                      android:layout_below="@+id/d_current_contract"
                      android:layout_width="wrap_content"
                      android:lineSpacingMultiplier="1.14"
                      android:text="Aaron is under contract until 2023 with an average yearly salary of 33.5 million"
                      android:layout_marginTop="@dimen/dp_4"
                      android:layout_marginBottom="@dimen/dp_15"
                      android:layout_marginRight="@dimen/dp_20"
                      android:textColor="@color/color_727272"
                      android:layout_marginLeft="@dimen/dp_26"
                      android:fontFamily="@font/rubik_light"
                      android:textSize="@dimen/sp_14"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:layout_height="wrap_content">
            <TextView android:height="21dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:id="@+id/d_business_ventures"
                      android:textColor="@color/color_black"
                      android:layout_marginTop="@dimen/dp_12"
                      android:textAlignment="center"
                      android:layout_marginLeft="@dimen/dp_26"
                      android:lineSpacingMultiplier="1.50"
                      android:text="@string/business_ventures_info"
                      android:fontFamily="@font/rubik_medium"
                      android:textSize="@dimen/sp_14"/>

            <TextView
                    android:id="@+id/user_business_ventures"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_below="@+id/d_business_ventures"
                    android:layout_width="wrap_content"
                    android:lineSpacingMultiplier="1.14"
                    android:text="In April 2018 Aaron Rodgers was announced as a limited partner in the Milwaukee Bucks ownership group, making him the first active NFL player with an ownership stake in an NBA franchise"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="@color/color_727272"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_20"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="@dimen/sp_14"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:layout_height="wrap_content">
            <TextView android:height="21dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:id="@+id/d_endorsement_deals"
                      android:textColor="@color/color_black"
                      android:layout_marginTop="@dimen/dp_12"
                      android:textAlignment="center"
                      android:layout_marginLeft="@dimen/dp_26"
                      android:lineSpacingMultiplier="1.50"
                      android:text="@string/endorsement_deals_info"
                      android:fontFamily="@font/rubik_medium"
                      android:textSize="@dimen/sp_14"/>

            <TextView
                    android:id="@+id/user_endorsement_deals"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_below="@+id/d_endorsement_deals"
                    android:layout_width="wrap_content"
                    android:lineSpacingMultiplier="1.14"
                    android:text="Adidas, State Farm, Prevea Healthcare, Bergstrom Automotive, Sharpie and IZOD"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:textColor="@color/color_727272"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_20"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="@dimen/sp_14"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/dp_16"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:cardBackgroundColor="@color/color_B3FFFFFF">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                <ImageView
                        android:id="@+id/img_charity_affiliated"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_151"
                        android:scaleType="centerCrop"
                        android:src="@drawable/category_img_baseball"
                        android:contentDescription="@string/item_image"/>

                <TextView android:height="21dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/txt_charity_affiliated"
                          android:layout_below="@+id/img_charity_affiliated"
                          android:textColor="@color/color_black"
                          android:layout_marginTop="@dimen/dp_16"
                          android:layout_marginBottom="@dimen/dp_16"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_15"
                          android:lineSpacingMultiplier="1.50"
                          android:text="@string/endorsement_deals_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                        android:id="@+id/charity_view_btn"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:lineSpacingMultiplier="1.17"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:fontFamily="@font/rubik_light"
                        android:text="@string/_view"
                        android:layout_below="@+id/img_charity_affiliated"
                        android:background="@drawable/follow_following_btn_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/follow_following_text_color"/>


                <TextView
                        android:id="@+id/txt_endorsement_details"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_below="@+id/img_charity_affiliated"
                        android:layout_width="wrap_content"
                        android:lineSpacingMultiplier="1.14"
                        android:text="@string/charity_sample_text"
                        android:layout_marginTop="@dimen/dp_60"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:textColor="@color/color_727272"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:fontFamily="@font/rubik_light"
                        android:textSize="@dimen/sp_14"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:cardElevation="@dimen/dp_5"
                app:cardBackgroundColor="@color/color_B3FFFFFF">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                <ImageView
                        android:id="@+id/img_community_work"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_151"
                        android:scaleType="centerCrop"
                        android:src="@drawable/category_img_baseball"
                        android:contentDescription="@string/item_image"/>

                <TextView android:height="21dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/txt_community_work"
                          android:layout_below="@+id/img_community_work"
                          android:textColor="@color/color_black"
                          android:layout_marginTop="@dimen/dp_16"
                          android:layout_marginBottom="@dimen/dp_16"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_15"
                          android:lineSpacingMultiplier="1.50"
                          android:text="@string/community_work_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                        android:id="@+id/btn_community_work"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:lineSpacingMultiplier="1.17"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:fontFamily="@font/rubik_light"
                        android:text="@string/_view"
                        android:layout_below="@+id/img_community_work"
                        android:background="@drawable/follow_following_btn_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/follow_following_text_color"/>

                <TextView
                        android:id="@+id/txt_community_work_details"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_below="@+id/img_community_work"
                        android:layout_width="wrap_content"
                        android:lineSpacingMultiplier="1.14"
                        android:visibility="gone"
                        android:text="@string/community_sample_text"
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:textColor="@color/color_727272"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:fontFamily="@font/rubik_light"
                        android:textSize="@dimen/sp_14"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:cardElevation="@dimen/dp_5"
                app:cardBackgroundColor="@color/color_B3FFFFFF">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                <ImageView
                        android:id="@+id/img_career"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_151"
                        android:scaleType="centerCrop"
                        android:src="@drawable/category_img_baseball"
                        android:contentDescription="@string/item_image"/>

                <TextView android:height="21dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/txt_career"
                          android:layout_below="@+id/img_career"
                          android:textColor="@color/color_black"
                          android:layout_marginTop="@dimen/dp_16"
                          android:layout_marginBottom="@dimen/dp_16"
                          android:textAlignment="center"
                          android:layout_marginLeft="@dimen/dp_15"
                          android:lineSpacingMultiplier="1.50"
                          android:text="@string/career_highlights_info"
                          android:fontFamily="@font/rubik_medium"
                          android:textSize="@dimen/sp_14"/>

                <TextView
                        android:id="@+id/btn_career"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:lineSpacingMultiplier="1.17"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:fontFamily="@font/rubik_light"
                        android:text="@string/_view"
                        android:layout_below="@+id/img_career"
                        android:background="@drawable/follow_following_btn_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/follow_following_text_color"/>
                <TextView
                        android:id="@+id/txt_career_details"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_below="@+id/img_career"
                        android:layout_width="wrap_content"
                        android:lineSpacingMultiplier="1.14"
                        android:visibility="gone"
                        android:text="@string/career_sample_text"
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:textColor="@color/color_727272"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:fontFamily="@font/rubik_light"
                        android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>