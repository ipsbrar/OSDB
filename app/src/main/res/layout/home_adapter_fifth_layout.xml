<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardElevation="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardBackgroundColor="@color/color_white"
        android:layout_marginTop="20dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/view_5_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/item_image"/>
        <TextView
                android:id="@+id/view_5_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/did_you_know"
                android:textColor="@color/color_black"
                android:background="@drawable/while_capsule_bg"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        <TextView
                android:id="@+id/view_5_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:maxLines="5"
                android:text="@string/sample_text_5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/view_5_image"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>