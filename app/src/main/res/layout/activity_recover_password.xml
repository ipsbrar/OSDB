<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.forgot_password.view.ForgotPasswordActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/dp_45"
                  android:layout_marginLeft="@dimen/dp_25"
                  android:layout_marginRight="@dimen/dp_25"
    >
        <TextView
                android:id="@+id/recover_account_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_account"

                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/color_2E384D"/>
        <TextView
                android:id="@+id/recover_account_sub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_account_sub_heading"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/recover_account_heading"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/color_8798AD"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_min_8"

                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:textSize="15sp"
                android:textColor="@color/color_8798AD"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_40"
                  android:maxLines="1"
                  android:inputType="textPassword"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conf_pass"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="@color/color_8798AD"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_40"
                  android:maxLines="1"
                  android:inputType="textPassword"/>

        <TextView
                android:id="@+id/fb_login_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/create_account_btn_bg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:text="Save"
        />


    </LinearLayout>
</RelativeLayout>