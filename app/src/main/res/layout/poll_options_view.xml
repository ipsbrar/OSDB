<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/poll_option_lay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/poll_1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/poll_heading_text"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1">
            <ProgressBar
                    android:id="@+id/progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/poll_progress_bg"
                    android:progress="0"/>
            <TextView
                    android:id="@+id/poll_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_white"
                    android:text="A."
                    android:fontFamily="@font/rubik_regular"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>
            <ImageView
                    android:id="@+id/team_1_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"

                    android:contentDescription="@string/team_logo"
                    android:layout_toRightOf="@id/poll_label"
                    android:layout_toEndOf="@id/poll_label"/>

            <TextView
                    android:id="@+id/poll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_2E384D"
                    android:fontFamily="@font/rubik_regular"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/team_1_logo"
                    android:layout_toRightOf="@id/team_1_logo"/>

            <TextView
                    android:id="@+id/progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_2E384D"
                    android:fontFamily="@font/rubik_regular"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>