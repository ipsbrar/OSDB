<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <ImageView
                android:id="@+id/player_image"
                android:layout_width="180dp"
                android:layout_height="@dimen/dp_150"
                android:background="@drawable/category_img_nfl"
                android:scaleType="centerCrop"/>


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10">

            <TextView
                    android:id="@+id/playerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lebron James"
                    android:textColor="@color/color_2E384D"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="@dimen/dp_16"/>

            <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playerName"
                    android:textColor="@color/color_8798AD"
                    android:textSize="@dimen/sp_12"
                    android:textAllCaps="true"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/age"
            />
            <TextView
                    android:id="@+id/ageTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_2E384D"
                    android:text="25"/>

            <TextView
                    android:id="@+id/born"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playerName"
                    android:textColor="@color/color_8798AD"
                    android:layout_toRightOf="@+id/age"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textAllCaps="true"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/born"/>
            <TextView
                    android:id="@+id/bornTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/born"
                    android:textSize="@dimen/sp_14"
                    android:layout_toRightOf="@+id/age"
                    android:textColor="@color/color_2E384D"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="1/12/1990"/>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>