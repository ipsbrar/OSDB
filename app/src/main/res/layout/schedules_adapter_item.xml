<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/team_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/schedule_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_8798AD"
                    android:textSize="12sp"
                    android:fontFamily="@font/rubik_regular"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:background="@drawable/time_bg"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="1:30 AM"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

            <ImageView
                    android:id="@+id/team_one_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_nfl_2"
                    android:layout_toStartOf="@id/schedule_time"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/team_logo"/>

            <TextView
                    android:id="@+id/team_one_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seahawck"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="end"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/team_one_logo"
                    android:textColor="@color/color_2E384D"/>


            <ImageView
                    android:id="@+id/team_two_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_nfl_1"
                    android:layout_toEndOf="@id/schedule_time"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/team_logo"/>

            <TextView
                    android:id="@+id/team_two_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Packers"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@id/team_two_logo"
                    android:textColor="@color/color_2E384D"/>
        </RelativeLayout>


        <View
                android:id="@+id/schedule_time_separator"
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="@color/color_DEDEDE"
                android:layout_below="@id/team_time_layout"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:id="@+id/schedule_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MetLife Stadium,  East Rutherford"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/color_8798AD"
                android:layout_below="@id/schedule_time_separator"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>

        <View
                android:id="@+id/schedule_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_DEDEDE"
                android:layout_below="@id/schedule_address"
                android:layout_marginTop="25dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/schedule_separator">

            <TextView
                    android:id="@+id/add_to_watchlist_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_to_watchlist"
                    android:textColor="@color/color_2E384D"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="15dp"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_DEDEDE"/>

            <TextView
                    android:id="@+id/buy_ticket_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/buy_tickets"
                    android:textColor="@color/color_6849D7"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="15dp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>