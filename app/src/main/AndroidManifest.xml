<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="com.elintminds.osdb">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"

            android:theme="@style/AppTheme">

        <activity
                android:name=".ui.dashboard.view.DashboardActivity"
                android:label="@string/title_activity_dashboard">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".ui.welcome_screen.view.WelcomeActivity">
        </activity>
        <activity android:name=".ui.login_options.view.LoginOptionsActivity"/>
        <activity
                android:name=".ui.forgot_password.view.ForgotPasswordActivity"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.login.view.LoginActivity"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.register.view.RegisterActivity"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.splash.view.SplashScreenActivity"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.detailview.view.DetailActivity"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.do_you_know.view.DoYouKnowActivity"
                android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.dashboard.view.PollCalendarActivity"/>
    </application>

</manifest>