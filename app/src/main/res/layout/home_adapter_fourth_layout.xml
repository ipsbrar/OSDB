<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginTop="20dp">

    <TextView
            android:id="@+id/second_view_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_poll"
            android:textColor="@color/color_565656"
            android:textSize="14sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAllCaps="true"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardBackgroundColor="@color/color_white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/view_4_msg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_2E384D"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:maxLines="5"
                    android:text="@string/sample_text_4"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/view_5_image"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/poll_1"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_below="@id/view_4_msg_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1">
                    <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/poll_progress_bg"
                            android:progress="76"/>
                    <TextView
                            android:id="@+id/poll_label_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"
                            android:text="A."
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"/>
                    <ImageView
                            android:id="@+id/team_1_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@string/team_logo"
                            android:layout_toRightOf="@id/poll_label_1"
                            android:layout_toEndOf="@id/poll_label_1"/>

                    <TextView
                            android:id="@+id/poll_1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"
                            android:text="Real Madrid"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/team_1_logo"
                            android:layout_toRightOf="@id/team_1_logo"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_black"
                            android:text="76%"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/poll_2"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_below="@id/poll_1"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1">
                    <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/poll_progress_bg"
                            android:progress="24"/>
                    <TextView
                            android:id="@+id/poll_label_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"
                            android:text="B."
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"/>
                    <ImageView
                            android:id="@+id/team_2_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@string/team_logo"
                            android:layout_toRightOf="@id/poll_label_2"
                            android:layout_toEndOf="@id/poll_label_2"/>

                    <TextView
                            android:id="@+id/poll_2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_white"
                            android:text="Liverpool"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@id/team_2_logo"
                            android:layout_toEndOf="@id/team_2_logo"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_black"
                            android:text="24%"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
