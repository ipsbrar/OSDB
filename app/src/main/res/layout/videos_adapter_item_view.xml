<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/video_preview_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/dp_4">


        <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/category_img_nfl"
                android:contentDescription="@string/item_image"/>

        <ImageView
                android:id="@+id/vidoe_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:padding="@dimen/dp_8"
                app:srcCompat="@drawable/ic_play"
                android:contentDescription="@string/play_icon"/>

        <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="3:23"
                android:background="@color/color_B3000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/color_white"
                android:fontFamily="@font/rubik_light"
                android:layout_gravity="bottom|end"/>

    </android.support.v7.widget.CardView>


    <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kris Bryant Placed on Disabled List..."
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_202020"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:layout_below="@id/video_preview_layout"
            android:fontFamily="@font/rubik_medium"/>

</RelativeLayout>