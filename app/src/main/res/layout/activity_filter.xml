<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/color_EFEFEF"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
    >
        <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/header_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/color_black"
                android:fontFamily="@font/rubik_medium"
                android:text="Filters"/>

        <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_back_black"
                android:padding="@dimen/dp_10"
                android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

        <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/txt_spinner_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/filter_color"
                android:fontFamily="@font/rubik_light"
                android:text="Select"/>


        <Spinner android:layout_width="match_parent"
                 android:id="@+id/spinner_cat"
                 android:background="@null"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:layout_toRightOf="@+id/txt_spinner_cat"
                 android:layout_centerVertical="true"
                 android:layout_toLeftOf="@+id/img_spinner_cat"
                 android:layout_height="wrap_content">
        </Spinner>

        <ImageView
                android:id="@+id/img_spinner_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_down"
                android:paddingTop="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/txt_sub_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/filter_color"
                android:fontFamily="@font/rubik_light"
                android:text="Select"/>

        <Spinner android:layout_width="match_parent"
                 android:id="@+id/spinner_sub_cat"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/txt_sub_cat"
                 android:background="@null"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:layout_toLeftOf="@+id/img_spinner_sub_cat"
                 android:layout_height="wrap_content">
        </Spinner>

        <ImageView
                android:id="@+id/img_spinner_sub_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_down"
                android:paddingTop="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/txt_spinner_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/filter_color"
                android:fontFamily="@font/rubik_light"
                android:text="Year"/>


        <Spinner android:layout_width="match_parent"
                 android:id="@+id/spinner_year"
                 android:background="@null"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:layout_toRightOf="@+id/txt_spinner_year"
                 android:layout_centerVertical="true"
                 android:layout_toLeftOf="@+id/img_spinner_year"
                 android:layout_height="wrap_content">
        </Spinner>

        <ImageView
                android:id="@+id/img_spinner_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrow_down"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <TextView
            android:id="@+id/signin_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/create_account_btn_bg"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/color_white"
            android:fontFamily="@font/rubik_medium"
            android:textSize="@dimen/sp_15"
            android:textAllCaps="true"
            android:text="Apply"/>

</LinearLayout>