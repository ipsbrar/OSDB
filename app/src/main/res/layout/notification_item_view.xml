<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80" xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_user_image"
            android:layout_marginLeft="@dimen/dp_10"
    />

    <TextView android:id="@+id/notification_txt" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="Tiger woods win the trophy"
              android:layout_toRightOf="@+id/imageView"
              android:layout_marginLeft="@dimen/dp_10"
              android:textSize="@dimen/sp_16"
              android:fontFamily="@font/rubik_regular"
              android:textColor="@color/color_black"/>

    <TextView android:id="@+id/time_txt" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="34 min ago"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="@dimen/dp_5"
              android:layout_marginRight="@dimen/dp_5"
              android:fontFamily="@font/rubik_regular"
              android:textSize="@dimen/sp_12"
              android:textColor="@color/color_D8D8D8"/>
</RelativeLayout>