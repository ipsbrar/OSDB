<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="@dimen/dp_25">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protect_your_account"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/color_2E384D"
            android:fontFamily="@font/rubik_bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_password_subtext"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/rubik_light"
            android:textColor="@color/color_8798AD"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_min_8_characters"
            android:gravity="center"
            android:textAllCaps="true"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/color_8798AD"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_regist_et_bg">
        <ImageView
                android:id="@+id/show_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_show_password"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/show_password_button"/>
        <EditText
                android:id="@+id/signupPassEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/rubik_light"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:imeOptions="actionNext"
                android:layout_toStartOf="@id/show_password_btn"/>
    </RelativeLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:gravity="center"
            android:textAllCaps="true"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/color_8798AD"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_regist_et_bg">
        <ImageView
                android:id="@+id/show_conf_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_show_password"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/show_password_button"/>
        <EditText
                android:id="@+id/signupConfPassEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/rubik_light"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:imeOptions="actionDone"
                android:layout_toStartOf="@id/show_conf_password_btn"/>
    </RelativeLayout>


    <TextView
            android:id="@+id/createAccountBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/color_white"
            android:fontFamily="@font/rubik_medium"
            android:textSize="@dimen/sp_15"
            android:text="@string/create_account"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/login_register_btn_bg"/>
</LinearLayout>