<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.forgot_password.view.ForgotPasswordActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/recover_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_back_gray"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_below="@+id/recover_password_toolbar"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_25"
                  android:layout_marginRight="@dimen/dp_25">
        <TextView
                android:id="@+id/recover_account_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_account"
                android:fontFamily="@font/rubik_bold"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/color_2E384D"/>
        <TextView
                android:id="@+id/recover_account_sub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_account_sub_heading"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/sp_15"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/color_8798AD"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:gravity="center"
                android:textAllCaps="true"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/color_8798AD"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_regist_et_bg">
            <ImageView
                    android:id="@+id/show_password_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_show_password"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/show_password_button"/>
            <EditText
                    android:id="@+id/recoverPassEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_light"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:imeOptions="actionNext"
                    android:layout_toStartOf="@id/show_password_btn"/>
        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:gravity="center"
                android:textAllCaps="true"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/color_8798AD"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_regist_et_bg">
            <ImageView
                    android:id="@+id/show_conf_password_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_show_password"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/show_password_button"/>
            <EditText
                    android:id="@+id/recoverConfPassEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_light"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:imeOptions="actionDone"
                    android:layout_toStartOf="@id/show_conf_password_btn"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/create_account_btn_bg"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="@color/color_white"
                android:fontFamily="@font/rubik_medium"
                android:textSize="@dimen/sp_15"
                android:text="@string/save"/>


    </LinearLayout>
</RelativeLayout>